				<a href="{{ post.url | url }}">
					{% if post.data.name %}
						{{ post.data.name }}
					{% else %}
						Staff
					{% endif %}
				</a>
			</h3>
			{% if post.data.position %}
				<p>
					{{ post.data.position }}
				</p>
			{% endif %}
			
